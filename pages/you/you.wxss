/* pages/you/you.wxss */
.container{
  
   width: 100%;
  overflow: hidden;
}
.userinfo {
  margin: 0;
 
  display: flex;
  width:120%;
  font-size:1.1em;
  flex-direction: column;
  align-items: center;
 
 overflow: hidden;
}
.user_shelter{
  padding-top: 30px;
  width: 120%;
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #F3F3F3;
  border-bottom-left-radius:50%;
  border-bottom-right-radius:50%;
}
.userinfo_avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
 
}

.userinfo_nickname {
   display: none; 
   color: #aaa;
  
}
.userinfo_score{
  margin:10px 0 30px 0;
  color:#fff;
  line-height:32px;
  padding: 0  20px;
  border-radius:20px; 
   background-color: #EEA235;
}
.menu{

  margin: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 20px;
  width:83%;
  overflow: hidden;
   padding:10px 0;
}

.menu_item{
  background-color: #fff;
  line-height:48px;
  display: flex;
 
   width:80%;
  margin: 0 auto;

}
.invite_frd{
  padding: 0;
  border:2px solid green;
  background-color: #fff;
  
}
.menu_item view{
  
  font-family: '思源黑体';
  font-size:17px;
  letter-spacing: 1px;
  background-color: #fff;
}
.menu button{
 border:2px solid #fff;
}
.menu_item image{
  
  margin-right: 10px;
  width:28px;
  height:28px;
  vertical-align: middle;
  margin-top:10px; 
}